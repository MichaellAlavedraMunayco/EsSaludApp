<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="60dp"
    tools:ignore="UnusedAttribute">

    <View
        android:id="@+id/avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_robot"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/txvIssuerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatar"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/avatar"
        android:paddingBottom="4dp"
        android:text="@string/chatbot_name" />

    <TextView
        android:id="@+id/txvMessageChatBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvIssuerName"
        android:layout_alignStart="@+id/txvIssuerName"
        android:background="@drawable/their_message"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:text="Hola"
        android:textSize="16sp" />
</RelativeLayout>